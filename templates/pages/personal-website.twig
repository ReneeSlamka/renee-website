{% extends 'project-page-layout.twig' %}

{% block title %}Ren&eacutee Slamka | Personal Website{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/assets/css/project-page-layout.css"/>
    <link rel="stylesheet" href="/assets/css/personal-website.css"/>
{% endblock %}

{% block projectTitle %}
    Personal Website
{% endblock %}

{% block projectType %}
    Personal Project
{% endblock %}

{% block projectDate %}
    February - Present
{% endblock %}

{% block projectSummary %}
    A website to showcase my portfolio of projects, and one day host my own blog.
{% endblock %}

{% block projectLinks %}
{% endblock %}

{% block projectImage %}
    <img id="personal-website-img" src="/assets/img/project-page-pics/current-site-screenshot.png">
{% endblock %}

{% block projectLanguages%}
    <p>PHP, Html, CSS</p>
{% endblock %}

{% block projectTechStack%}
    <p>Twig, Bootstrap, Slim, Bower, Composer, Photoshop</p>
{% endblock %}

{% block projectDescription %}
    <p class="continued-description">
        Comming soon!
    </p>
    <img src="/assets/img/project-page-pics/letter-insanity.png">
    <footer class="img-caption">
        When you become obsessed with finding the perfect letters...
    </footer>
    <p class="continued-description">
        More details here soon!
    </p>
    <img id="first-site-mockup-img" src="/assets/img/project-page-pics/first-site-mockup.png">
    <footer class="img-caption">
        My first mockup for the front page
    </footer>
    <p class="continued-description">
        And here!
    </p>
    <img id="eyes-closed-img" src="/assets/img/project-page-pics/eyes-closed.JPG">
    <footer class="img-caption">
        The hardest part of this entire project: keeping my freakin' eyes open for the camera...
    </footer>

{% endblock %}

{% block projectSkills %}
    <div class="personal-website-skill-badge">
        <img class="square-badge" src="/assets/img/icons/web-dev-badge.png">
        <footer>Front End Development</footer>
    </div>
    <div class="personal-website-skill-badge">
        <img class="square-badge" id="git-badge" src="/assets/img/icons/git-badge.png">
        <footer>Source Control - Git</footer>
    </div>
    <div class="personal-website-skill-badge">
        <img class="square-badge" src="/assets/img/icons/ux-badge.png">
        <footer>UI Design</footer>
    </div>
{% endblock %}